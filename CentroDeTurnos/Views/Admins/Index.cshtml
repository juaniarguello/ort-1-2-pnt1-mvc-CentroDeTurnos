@model IEnumerable<CentroDeTurnos.Models.Admin>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <main role="main" class="pb-3">
        <h2 style="font-weight: 700; font-size: 40px; line-height: 80px; color: black;">Administradores</h2>

        <div id="container" style=" width: 100%; text-align: left;">



            <div id="right" style=" float: left; width: 200px; padding-bottom:10px">
                <p>
                    <a asp-action="Create" class="btn btn-primary">Crear nuevo Administrador</a>
                </p>
            </div>

        </div>

        <table class="table">
            <thead>
                <tr style="         color: #fff;
                                    line-height: 1.4;
                                    background-color: #333333;
                                    font-family: 'Nunito', sans-serif;">
                    <th>
                        @Html.DisplayNameFor(model => model.Mail)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="color: black;
                       line-height: 1.4;
                       background-color: #e6e6e6;
                       font-family: 'Nunito', sans-serif;">
                        <td>
                            @Html.DisplayFor(modelItem => item.Mail)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Detalles</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </main>
</div>
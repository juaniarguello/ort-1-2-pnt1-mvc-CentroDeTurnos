@model CentroDeTurnos.Models.Admin

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/css/login/main.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/css/login/util.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/css/estilos.css")" rel="stylesheet" type="text/css" />



<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form asp-action="Login" class="login100-form validate-form p-l-55 p-r-55 p-t-178">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <span class="login100-form-title">
                    Sign In
                </span>

                <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter username">
                    <input  asp-for="Mail" name="Mail"  class="input100" type="text" placeholder="mail">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Please enter password">
                    <input asp-for="Pass" name="Pass" type="password" class="input100" placeholder="Password">
                    <span class="focus-input100"></span>
                </div>

                <div class="text-right p-t-13 p-b-23">
                    <span class="txt1">
                        Forgot
                    </span>

                    <a href="#" class="txt2">
                        Username / Password?
                    </a>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Sign in
                    </button>
                </div>

                <div class="flex-col-c p-t-170 p-b-40">
                    <span class="txt1 p-b-9">
                        Don’t have an account?
                    </span>

                    <a href="#" class="txt3">
                        Sign up now
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>